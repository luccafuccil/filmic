  "main": "electron/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "webpack --mode production",
    "build:fast": "webpack --mode development",
    "dev": "webpack --mode development --watch",
    "start": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "pack:fast": "npm run build:fast && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:fast": "npm run build:fast && electron-builder --win nsis",
    "dist:portable": "npm run build:fast && electron-builder --win portable",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --win --publish always"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.5",
